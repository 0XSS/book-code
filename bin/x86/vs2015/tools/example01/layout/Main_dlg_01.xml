<?xml version="1.0" encoding="utf-8" standalone="yes" ?>

<!-- 
sizebox 拖拽区域矩形大小
caption="0,0,0,40" 标题栏区域

showshadow="true" 阴影
shadowimage="example01/images/shadow.png"
shadowcorner="23,13,23,33"

阴影这三个属性需要配合起来使用

-->

<Window size="840,600" sizebox="4,4,4,4" caption="0,0,0,600" mininfo="840,600" showshadow="true" shadowimage="example01/images/shadow.png" shadowcorner="23,13,23,33">
<Font name="微软雅黑" size="13" default="true"/>
<Font name="微软雅黑" size="16"/>
<Font name="微软雅黑" size="22"/>
<VerticalLayout name="background" width="840" height="320" bkimage="file='example01/images/SKIN_PIC_2.png' corner='0,320,0,0'" bkcolor="#FFA0A0A4" bordercolor="#00969696" bordersize="1">

    
    
        <VerticalLayout>
            <!-- 边框为 1，内边距需设为 1 -->
            <Container bordersize="1" bordercolor="0xFFFF0000" inset="1,1,1,1">  
            <Control bkcolor="#FFFFFF00" /> 

            <VerticalLayout>
                    <Text text="padding 左侧 100" padding="100,0,0,0" autocalcwidth="true" height="23" textcolor="#001C1C1C" font="1" />  

                    <Text text="padding 上边 100" padding="0,100,0,0" autocalcwidth="true" height="23" textcolor="#001C1C1C" font="1" />  

                    <Text text="边框为 1，内边距需设为 1" padding="100,0,0,0" autocalcwidth="true" height="23" textcolor="#001C1C1C" font="1" />  
            </VerticalLayout>


            
            </Container>  


           
        </VerticalLayout>
        
    
</VerticalLayout>
</Window>
